<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podium"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joueur1 : Score1"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="50dp"
        android:layout_marginVertical="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_podium" />

    <TextView
        android:id="@+id/tv_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joueur2 : Score2"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="50dp"
        android:layout_marginVertical="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score1" />
    <TextView
        android:id="@+id/tv_score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joueur3 : Score3"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="50dp"
        android:layout_marginVertical="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score2" />
</androidx.constraintlayout.widget.ConstraintLayout>